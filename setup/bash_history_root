ln -sf /usr/share/zoneinfo/America/Montevideo /etc/localtime
hwclock --systohc
pacman -S neovim
nvim /etc/locale.gen
locale-gen

touch /etc/locale.conf
echo "LANG=en_US.UTF-8" >> /etc/locale.conf           # locales de /etc/locale.gen descomentadas

pacman -S grub os-prober efibootmgr
grub-install --recheck /dev/sda
grub-install --target=x86_64-efi --efi-directory=/boot --bootloader-id=grub
grub-mkconfig -o /boot/grub/grub.cfg
passwd
useradd -m gonchi
passwd gonchi
nvim /etc/hostname
nvim /etc/hosts
pacman -Ss dhcpcd
pacman -Ss dhclient
pacman -S dhcpcd
pacman -S NetworkManager
pacman -S dhcpcd-runit
ln -s /etc/runit/sv/dhcpcd/ /run/runit/service/
ln -s /etc/runit/sv/dhcpcd/ /run/runit/service/
ls /run/runit/
pacman -Ss network manager
pacman -S networkmanager networkmanager-runit
ln -s /etc/runit/sv/NetworkManager/ /run/runit/service
ls /run/runit/
ls -la /run/runit/
rm /run/runit/service
ls
clear
reboot
exit
sudo mount /mnt/boot /dev/disk/by-label/BOOT
ls
exit
grub-install --target=x86_64-efi --efi-directory=/boot --bootloader-id=grub
ls /boot/
ls /boot/grub/
ls /boot/grub/grub.cfg
nvim /boot/grub/grub.cfg
ls
grub-mkconfig -o /boot/grub/grub.cfg
export GRUB_DISABLE_OS_PROBER=false
grub-mkconfig -o /boot/grub/grub.cfg
update-grub --help
nvim /etc/default/grub
ls
nvim /etc/default/grub
grub-mkconfig -o /boot/grub/grub.cfg
update-grub
nvim /etc/default/grub
ls
ls /etc/fstab
nvim /etc/fstab
ls
clear
exit
grub-install --target=x86_64-efi --efi-directory=/boot --bootloader-id=grub
grub-mkconfig -o /boot/grub/grub.cfg
exit
usermod -a wheel gonchi
usermod -a -G wheel gonchi
exit
visudo
