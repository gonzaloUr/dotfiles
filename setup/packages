#!/bin/sh

# essentials
pacman -S --needed curl
pacman -S --needed wget
pacman -S --needed unzip
pacman -S --needed zip
pacman -S --needed cronie
pacman -S --needed cronie-runit
pacman -S --needed inetutils
pacman -S --needed net-tools
pacman -S --needed tlp
pacman -S --needed tlp-runit
pacman -S --needed zsh
pacman -S --needed zsh-completions
pacman -S --needed zsh-history-substring-search
pacman -S --needed zsh-syntax-highlighting
pacman -S --needed zsh-autosuggestions

# networking
pacman -S --needed dhcpd 
pacman -S --needed dhcpd-runit
pacman -S --needed wpa_supplicant
pacman -S --needed wpa_supplicant-runit
pacman -S --needed bluez
pacman -S --needed bluez-runit
pacman -S --needed connman
pacman -S --needed connman-runit

# ntp
pacman -S --needed openntpd-runit
pacman -S --needed openntpd

# xorg
pacman -S --needed xorg
pacman -S --needed xorg-xinit
pacman -S --needed xorg-drivers
pacman -S --needed xclip
pacman -S --needed xsel
pacman -S --needed xdotool
pacman -S --needed dunst libnotify
pacman -S --needed xcompmgr
pacman -S --needed xwallpaper

# multimedia
pacman -S --needed pulseaudio-alsa
pacman -S --needed pulseaudio-bluetooth
pacman -S --needed pulseaudio-jack
pacman -S --needed pulseaudio

# acpi server
pacman -S --needed acpid
pacman -S --needed acpid-runit

# xdg
pacman -S --needed xdg-utils
pacman -S --needed perl-file-mimeinfo

# src dependencies
pacman -S --needed base-devel
