#!/bin/sh

wal.sh &
dunst &
picom &

switch\
    -i\
    'pactl subscribe'\
    'acpi_listen'\
    'udevadm monitor --udev --property'\
    'time.sh'\
    -o\
    'statusbar.awk'\
    'lowbat.awk'\
    -r\
    1-1 2-1 3-1 4-1\
    1-2 2-2 3-2 4-2 &

# Levantar bus de usuario dbus.
source /etc/X11/xinit/xinitrc.d/80-dbus.sh

# https://gitlab.gnome.org/GNOME/gcr/-/blob/master/gcr/gcr-ssh-agent.service.in
gcr_tmp=/run/user/$(id -u)/gcr-ssh-agent
mkdir -p "$gcr_tmp/gcr"
export SSH_AUTH_SOCK="$gcr_tmp/gcr/ssh"
/usr/lib/gcr-ssh-agent --base-dir "$gcr_tmp/gcr" &

# Levantar keyring
eval $(/usr/bin/gnome-keyring-daemon --start --components=secrets,ssh)

exec dwm
