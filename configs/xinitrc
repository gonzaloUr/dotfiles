#!/bin/sh

wal.sh &
dunst &
picom &
# clipmanagerd &

switch\
    -i\
    'pactl subscribe'\
    'acpi_listen'\
    'udevadm monitor --udev --property'\
    'time.sh'\
    -o\
    'statusbar.awk'\
    'lowbat.awk'\
    -r\
    1-1 2-1 3-1 4-1\
    1-2 2-2 3-2 4-2 &

# Ejecutar daemon de gnome keyring, depende de dbus.
eval $(gnome-keyring-daemon --start)

# Exportar variable de gnome keyring.
export SSH_AUTH_SOCK

exec dbus-run-session dwm
